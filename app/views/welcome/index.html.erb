<div class="container">
<% if current_user %>
<div class="center-align">
  <a class="waves-effect waves-light light-blue lighten-1"><%= link_to "Logout",
    logout_path, class:"light-blue lighten-1 btn-large" %></a>
  <p class="center-align">Welcome to Twitter, <%= current_user.name %></p>

  

  <% @tweets.each do |tweet| %></ul>

  <div class="row">
        <div class="center-align">
          <div class="card light-blue lighten-1">
            <div class="card-content white-text">
              <span class="card-title"></span>
              <p><%= tweet.text %></p>
            </div>
            <div class="card-action">
              <a href="#">Retweet</a>
              <a href="#">Reply</a>
              <a href="#">Favorite</a>
            </div>
          </div>
        </div>
      </div>
      <% end %>

</div>
</div>
<% else %>
<div class="center-align">
  <a class="waves-effect waves-light light-blue lighten-1"><%= link_to "Login with Twitter", login_path, class:"light-blue lighten-1 btn-large" %></a>
</div>
<% end %>
